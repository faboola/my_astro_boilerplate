<script>
    //Add click event listener to menu

document.getElementById('navIcon').addEventListener("click",addMenuClass);

//Menu AddClass

function addMenuClass() {
    var navIcon = document.getElementById('navIcon');
    var header = document.getElementById('mainHeader');
  
   	navIcon.classList.toggle('open');
  	header.classList.toggle('is-mobile');
	document.documentElement.classList.toggle('noscroll');


}

    /* -------------------------------------------------------------------------- */
    /* STICKY NAVBAR */
    /* -------------------------------------------------------------------------- */

    const nav = document.querySelector('#mainHeader'); //definisco l'elemento da modificare (navbar)
    let navTop = nav.offsetHeight; //prendo l'altezza della navbar

    function fixedNav() {

        if (window.scrollY > navTop) { //se lo scroll verticale Ã¨ maggiore dell'altezza della navbar
            nav
                .classList
                .add('scrolled'); //allora aggiungi una classe alla navbar
        } else {
            nav
                .classList
                .remove('scrolled'); //altrimenti togli la classe
        }
    }

    window.addEventListener('scroll', fixedNav); //sull'evento scroll fai partire la funzione sopra.
</script>